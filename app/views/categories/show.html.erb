<% provide(:title, @category.name) %>
<% provide(:description, @category.description) %>


<ul class="breadcrumb">
	<li><%= link_to "Crear Topic",new_topic_path(:category => @category.id) %></li>
	<li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="divider">/</span></li>
	<%if  @category.topics.count ==1 %>
	<li>Esta Categoría tiene un total de <%=h @category.topics.count.to_s %> topic. </li>
	<% else %>
	<li>Esta Categoría tiene un total de <%=h @category.topics.count.to_s %> topics. </li>
	<% end %>
</ul>

<% @topics = Topic.where(:category_id => @category.id) %>
<% @topics.each do |topic| %>
    		Titulo:  <%= link_to  topic.title  , topic %>  <%= link_to  'responder'  , new_post_path(:topic => topic.id)%>
    		<% @fpost = Post.where(:id => topic.posts.first.id) %>
    		

<div class="content row"  style="border:1px black solid !important; border-radius:4px; box-shadow:4px 4px 4px 4px;">
	<ul class="thumbnails">
		<li class="span4"> <img src="/assets/imagen2.png"> </li>

    	<li class="hero-unit"> <%= @fpost.first.content %> </li>
    		
	</ul>


</div>
	<div class="page-header"></div>
<% end%>
